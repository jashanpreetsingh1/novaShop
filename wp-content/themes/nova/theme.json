{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
	  "appearanceTools": true,
	  "useRootPaddingAwareAlignments": true,
  
	  "layout": {
		"contentSize": "860px",
		"wideSize": "1240px"
	  },
  
	  "spacing": {
		"units": ["px", "em", "rem", "vh", "vw", "%"],
		"spacingSizes": [
		  { "slug": "xs", "size": "8px", "name": "XS" },
		  { "slug": "sm", "size": "12px", "name": "S" },
		  { "slug": "md", "size": "20px", "name": "M" },
		  { "slug": "lg", "size": "38px", "name": "L" },
		  { "slug": "xl", "size": "64px", "name": "XL" }
		]
	  },
  
	  "shadow": {
		"presets": [
		  {
			"slug": "soft",
			"name": "Soft Shadow",
			"shadow": "0 10px 30px rgba(0,0,0,0.35)"
		  }
		]
	  },
  
	  "color": {
		"palette": [
		  { "slug": "background", "color": "#050814", "name": "Background (Deep)" },
		  { "slug": "surface", "color": "#0B1220", "name": "Surface" },
		  { "slug": "card", "color": "#0B1F3A", "name": "Card (Hero/Card)" },
  
		  { "slug": "text", "color": "#F8FAFC", "name": "Text" },
		  { "slug": "muted", "color": "#B7C0D6", "name": "Muted" },
		  { "slug": "border", "color": "#1E2A40", "name": "Border" },
  
		  { "slug": "primary", "color": "#7C3AED", "name": "Primary (Violet)" },
		  { "slug": "secondary", "color": "#22D3EE", "name": "Secondary (Cyan)" },
		  { "slug": "accent", "color": "#F59E0B", "name": "Accent (Amber)" },
		  { "slug": "success", "color": "#22C55E", "name": "Success" }
		]
	  },
  
	  "typography": {
		"fontFamilies": [
		  {
			"name": "System (Modern)",
			"slug": "system",
			"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Inter,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
		  }
		],
		"fontSizes": [
		  { "slug": "sm", "size": "0.95rem", "name": "Small" },
		  { "slug": "md", "size": "1.06rem", "name": "Base" },
		  { "slug": "lg", "size": "1.55rem", "name": "Large" },
		  { "slug": "xl", "size": "2.65rem", "name": "XL" },
		  { "slug": "xxl", "size": "3.4rem", "name": "2XL" }
		]
	  }
	},
  
	"styles": {
	  "spacing": {
		"blockGap": "18px"
	  },
  
	  "color": {
		"background": "var(--wp--preset--color--background)",
		"text": "var(--wp--preset--color--text)"
	  },
  
	  "typography": {
		"fontFamily": "var(--wp--preset--font-family--system)",
		"fontSize": "var(--wp--preset--font-size--md)",
		"lineHeight": "1.75"
	  },
  
	  "elements": {
		"link": {
		  "color": { "text": "var(--wp--preset--color--secondary)" },
		  "typography": { "fontWeight": "650" }
		},
		"h1": { "typography": { "fontSize": "var(--wp--preset--font-size--xxl)", "lineHeight": "1.05" } },
		"h2": { "typography": { "fontSize": "var(--wp--preset--font-size--xl)", "lineHeight": "1.15" } },
		"h3": { "typography": { "fontSize": "var(--wp--preset--font-size--lg)", "lineHeight": "1.2" } }
	  },
  
	  "blocks": {
		"core/heading": {
		  "typography": { "fontWeight": "850" },
		  "spacing": { "margin": { "bottom": "10px" } }
		},
  
		"core/paragraph": {
		  "typography": { "lineHeight": "1.85" },
		  "spacing": { "margin": { "bottom": "14px" } }
		},
  
		"core/list": {
		  "spacing": { "padding": { "left": "22px" } }
		},
  
		"core/quote": {
		  "border": {
			"left": {
			  "color": "var(--wp--preset--color--secondary)",
			  "width": "4px",
			  "style": "solid"
			}
		  },
		  "spacing": {
			"padding": { "left": "16px" },
			"margin": { "top": "18px", "bottom": "18px" }
		  }
		},
  
		"core/pullquote": {
		  "color": { "background": "var(--wp--preset--color--card)" },
		  "border": {
			"color": "var(--wp--preset--color--border)",
			"width": "1px",
			"style": "solid"
		  },
		  "spacing": {
			"padding": { "top": "22px", "right": "22px", "bottom": "22px", "left": "22px" },
			"margin": { "top": "18px", "bottom": "18px" }
		  },
		  "typography": { "fontStyle": "italic" }
		},
  
		"core/table": {
		  "border": {
			"color": "var(--wp--preset--color--border)",
			"width": "1px",
			"style": "solid"
		  },
		  "spacing": { "margin": { "top": "18px", "bottom": "18px" } }
		},
  
		"core/verse": {
		  "typography": { "lineHeight": "1.8" },
		  "spacing": { "margin": { "top": "18px", "bottom": "18px" } }
		},
  
		"core/code": {
		  "color": {
			"background": "var(--wp--preset--color--surface)",
			"text": "var(--wp--preset--color--text)"
		  },
		  "border": {
			"color": "var(--wp--preset--color--border)",
			"width": "1px",
			"style": "solid"
		  },
		  "spacing": {
			"padding": { "top": "12px", "right": "12px", "bottom": "12px", "left": "12px" },
			"margin": { "top": "18px", "bottom": "18px" }
		  }
		},
  
		"core/button": {
		  "border": { "radius": "14px" },
		  "spacing": {
			"padding": { "top": "16px", "right": "28px", "bottom": "16px", "left": "28px" }
		  },
		  "typography": { "fontWeight": "850" }
		},
  
		"core/group": {
		  "shadow": "var(--wp--preset--shadow--soft)"
		}
	  }
	}
  }